# Environment variables for Research Experiment Agent
# Copy this file to .env and fill in your values
# Or source it directly: source env.example

# =============================================================================
# OpenAI API Configuration
# =============================================================================

# Choose Azure or OpenAI
export USE_AZURE=true

# Azure OpenAI Configuration
export AZURE_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/
export AZURE_API_KEY=your-azure-api-key-here
export AZURE_API_VERSION=2024-12-01-preview
export AZURE_DEPLOYMENT=gpt-4o-2

# OpenAI Configuration (if not using Azure)
# export OPENAI_API_KEY=your-openai-api-key-here

# Model name
export MODEL_NAME=gpt-4o

# =============================================================================
# Docker Configuration
# =============================================================================

export DOCKER_HOST=localhost
export DOCKER_PORT=18379
export DOCKER_TIMEOUT=3600
export DOCKER_CONTAINER_NAME=ai_hanqi.li_research_agent

# Docker working directory (inside container)
export DOCKER_WORKING_DIR=/workspace

# =============================================================================
# Path Configuration
# =============================================================================

# Local workspace directory (shared with Docker)
export LOCAL_WORKSPACE_DIR=/hpc_stor03/sjtu_home/hanqi.li/agent_workspace/ResearchAgent/src/agents/experiment_agent/workspace

# Input file paths
export IDEA_INPUT_PATH=/hpc_stor03/sjtu_home/hanqi.li/agent_workspace/ResearchAgent/src/agents/experiment_agent/workspace/idea.json
export PAPER_INPUT_PATH=/hpc_stor03/sjtu_home/hanqi.li/agent_workspace/ResearchAgent/src/agents/experiment_agent/workspace/paper.tex

# Output directories
export EXPERIMENT_LOGS_DIR=/hpc_stor03/sjtu_home/hanqi.li/agent_workspace/ResearchAgent/src/agents/experiment_agent/workspace/logs
export RESULTS_OUTPUT_DIR=/hpc_stor03/sjtu_home/hanqi.li/agent_workspace/ResearchAgent/src/agents/experiment_agent/workspace/results

# =============================================================================
# Experiment Configuration
# =============================================================================

# Maximum workflow iterations
export MAX_WORKFLOW_ITERATIONS=5

# Enable tracing (for debugging)
export ENABLE_TRACING=false

# Note: Streaming is always enabled for API calls to provide real-time output

# Timeout settings (in seconds)
export CODE_EXECUTION_TIMEOUT=3600
export AGENT_CALL_TIMEOUT=600

# =============================================================================
# Logging Configuration
# =============================================================================

export LOG_LEVEL=INFO
export COLORED_LOGS=true

